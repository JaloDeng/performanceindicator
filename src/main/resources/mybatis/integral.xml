<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="cn.net.jalo.performanceindicator.mapper.IntegralMapper" >

	<resultMap id="BaseResultMap" type="cn.net.jalo.performanceindicator.entity.Integral" >
		<result column="id" property="id"/>
		<result column="label" property="label"/>
		<result column="value" property="value"/>
		<result column="remark" property="remark"/>
		<result column="createUser" property="createUser"/>
		<result column="createTime" property="createTime"/>
		<result column="updateUser" property="updateUser"/>
		<result column="updateTime" property="updateTime"/>
	</resultMap>
	
	<sql id="Base_Column" >
		id, label, value, remark, createUser, createTime, updateUser, updateTime
	</sql>
	
	<sql id="Where_Clause">
		<where>
		<if test="label != null and label != ''">
			AND label LIKE CONCAT('%', '#{label}', '%')
		</if>
		<if test="value != null">
			AND value = #{value}
		</if>
		</where>
	</sql>
	
	<insert id="insert" parameterType="cn.net.jalo.performanceindicator.entity.Integral">
		INSERT INTO t_integral(label, value, remark, createUser, updateUser)
		values(#{label}, #{value}, #{remark}, #{createUser}, #{updateUser})
	</insert>
	
	<delete id="delete" parameterType="java.lang.Long">
		DELETE FROM t_integral WHERE id = #{id}
	</delete>
	
	<select id="select" resultMap="BaseResultMap">
		SELECT <include refid="Base_Column"/> FROM t_integral <include refid="Where_Clause"/>
	</select>
	
	<select id="selectById" resultMap="BaseResultMap">
		SELECT <include refid="Base_Column"/> FROM t_integral WHERE id = #{id}
	</select>
	
	<update id="update" parameterType="cn.net.jalo.performanceindicator.entity.Integral">
		update t_integral
		<set>
		<if test="label != null">
			label = #{label},
		</if>
		<if test="value != null">
			value = #{value},
		</if>
		<if test="remark != null">
			remark = #{remark},
		</if>
		<if test="updateUser != null">
			updateUser = #{updateUser},
		</if>
		<if test="updateTime != null">
			updateTime = #{updateTime},
		</if>
		</set>
		where id = #{id}
	</update>
	
</mapper>