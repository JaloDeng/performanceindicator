<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="cn.net.jalo.performanceindicator.mapper.EmployeeMapper" >

	<resultMap id="BaseResultMap" type="cn.net.jalo.performanceindicator.entity.Employee" >
		<result column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="phone" property="phone"/>
		<result column="email" property="email"/>
		<result column="address" property="address"/>
		<result column="remark" property="remark"/>
		<result column="createUser" property="createUser"/>
		<result column="createTime" property="createTime"/>
		<result column="updateUser" property="updateUser"/>
		<result column="updateTime" property="updateTime"/>
	</resultMap>
	
	<sql id="Base_Column" >
		id, name, phone, email, address, remark, createUser, createTime, updateUser, updateTime
	</sql>
	
	<sql id="Where_Clause">
		<where>
		<if test="name != null and name != ''">
			AND name LIKE CONCAT('%', '#{name}', '%')
		</if>
		<if test="phone != null and phone != ''">
			AND phone LIKE CONCAT('%', '#{phone}', '%')
		</if>
		<if test="email != null and email != ''">
			AND email LIKE CONCAT('%', '#{email}', '%')
		</if>
		<if test="address != null and address != ''">
			AND address LIKE CONCAT('%', '#{address}', '%')
		</if>
		</where>
	</sql>
	
	<insert id="insert" parameterType="cn.net.jalo.performanceindicator.entity.Employee">
		INSERT INTO t_employee(name, phone, email, address, remark, createUser, updateUser)
		values(#{name}, #{phone}, #{email}, #{address}, #{remark}, #{createUser}, #{updateUser})
	</insert>
	
	<delete id="delete" parameterType="java.lang.Long">
		DELETE FROM t_employee WHERE id = #{id}
	</delete>
	
	<select id="select" resultMap="BaseResultMap">
		SELECT <include refid="Base_Column"/> FROM t_employee <include refid="Where_Clause"/>
	</select>
	
	<select id="selectById" resultMap="BaseResultMap">
		SELECT <include refid="Base_Column"/> FROM t_employee WHERE id = #{id}
	</select>
	
	<update id="update" parameterType="cn.net.jalo.performanceindicator.entity.Employee">
		update t_employee
		<set>
		<if test="name != null and name != ''">
			name = #{name},
		</if>
		<if test="phone != null">
			phone = #{phone},
		</if>
		<if test="email != null">
			email = #{email},
		</if>
		<if test="address != null">
			address = #{address},
		</if>
		<if test="remark != null">
			remark = #{remark},
		</if>
		<if test="updateUser != null">
			updateUser = #{updateUser},
		</if>
		<if test="updateTime != null">
			updateTime = #{updateTime},
		</if>
		</set>
		where id = #{id}
	</update>
	
</mapper>